<html>

  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>QR Generator</title>
    <link rel="icon" href="/img/icon.png" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
    <link rel="stylesheet" href="https://cdn.linearicons.com/free/1.0.0/icon-font.min.css" />
    <script language="javascript" src="/js/bootstrap.min.js"></script>

  </head>

  <body>

    <div class="main-content">
      <div class="row flex-container">

        <div class="flex-item flex-item-left col-md-6">

          <form class="qr-generator-form">
            <div class="app-title">QR Generator</div>

            <input type="text" class="input-text" name="plainText" placeholder="e.g. http://youtube.com" />
            <input type="submit" value="Convert" class="submit-button" />

            <div class="row color-form" id="foreground-form">
              <label id="foreground-label" for="foreground">Color </label>
              <input id="foreground-input" class="color-picker" type="color" name="foreground" value="#000000" />
            </div>

            <div class="row color-form">
              <label id="background-label" for="background">Background </label>
              <input id="background-input" class="color-picker" type="color" name="background" value="#ffffff" />
            </div>

            <div class="row file-form">
              <label for="file-upload" class="custom-file-upload">
                <p class="file-instruction"> Upload Image <img class="upload-icon" src="/img/upload-icon.png" /> </p>
              </label>
              <input id="file-upload" type="file" accept="image/*" />
              <img id="image-preview" src="#" />
              <span class="lnr lnr-cross cancel-icon"></span>
            </div>

          </form>
        </div>
        <div class="flex-item flex-item-right output-container col-md-6">

          <img class="qr-viewer" src="/img/qr-holder.png" />
          <p class="error-message"> QR code output here </p>

          <div class="img-container">
            <a href="#" id="download-btn"> <button class="download-btn-trigger"> Download </button></a>
            <p class="contrast-message"> contrast isn't looking great :(</p>
          </div>

          <canvas class="qr-canvas"></canvas>
        </div>
      </div>
    </div>
    <script src="/js/app.js"></script>
  </body>

</html>